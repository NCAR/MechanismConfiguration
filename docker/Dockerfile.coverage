FROM fedora:39

RUN dnf -y update \
    && dnf -y install \
        cmake \
        gcc-c++ \
        git \
        lcov \
        make \
    && dnf clean all

COPY . /mechanism_configuration/

ENV CXX=g++

RUN mkdir /build \
      && cd /build \
      && cmake \
        -D CMAKE_BUILD_TYPE=debug \
        -D MECH_CONFIG_ENABLE_COVERAGE:BOOL=TRUE \
        ../mechanism_configuration \
      && make install -j 8

WORKDIR /build